<div class="burgerLogo">
    <h1>Burgers</h1>
    <h2>Choose a burger to devour or add a burger to devour later!</h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h3>Burgers to eat</h3>
            <ul style="list-style-type:none;">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <div class="form-group">
                        <input type="submit" class="devoured" name="devoured" id="change-devoured" data-id="{{this.id}}"
                            data-name="{{this.burger_name}}" value="Eat Me!">
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4">
            <div class="search">
                <h2>Add a burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="bur"></label>
                        <input type="text" id="bur" name="name">
                    </div>
                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="devoured">
                <h3>Have been devoured</h3>
                <ul style="list-style-type:none;">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>